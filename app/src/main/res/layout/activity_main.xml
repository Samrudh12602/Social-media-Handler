<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f8f7fc"
        tools:context=".MainActivity">
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:itemTextColor="@color/white"
            app:itemIconTint="@color/white"
            app:menu="@menu/menu_navigation"
            android:background="@color/colorPrimary"
            android:layout_alignParentBottom="true"
            >
        </com.google.android.material.bottomnavigation.BottomNavigationView>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rel"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/colorPrimary">

                    <ImageView
                        android:id="@+id/logo"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="40dp"
                        android:src="@drawable/logo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/logo"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="@string/app_name"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:textStyle="bold"></TextView>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/rel"
                    android:orientation="vertical"
                    android:padding="12sp">

                    <RelativeLayout
                        android:id="@+id/whatsapp"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp">
                        <ImageView
                            android:id="@+id/whatsapp_logo"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="12dp"
                            android:src="@drawable/whatsapp_logo"
                            android:layout_marginLeft="12dp">
                        </ImageView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_margin="10dp"
                            android:layout_toLeftOf="@id/whatsapp_arr"
                            android:layout_toRightOf="@id/whatsapp_logo"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:text="Whatsapp"
                                android:textColor="@color/blue"
                                android:textSize="22sp"
                                android:textStyle="bold">
                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:text="Download Whatsapp Status Images and Videos"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold">
                            </TextView>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/whatsapp_arr"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/ic_arrow"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp">
                        </ImageView>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/facebook"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp">
                        <ImageView
                            android:id="@+id/fb_logo"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="12dp"
                            android:src="@drawable/fb"
                            android:layout_marginLeft="12dp">
                        </ImageView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_margin="10dp"
                            android:layout_toLeftOf="@id/fb_arr"
                            android:layout_toRightOf="@id/fb_logo"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:text="Facebook"
                                android:textColor="@color/blue"
                                android:textSize="22sp"
                                android:textStyle="bold">
                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:text="Download Facebook Videos"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold">
                            </TextView>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/fb_arr"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/ic_arrow"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp">
                        </ImageView>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/instagram"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp">
                        <ImageView
                            android:id="@+id/instagram_logo"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="12dp"
                            android:src="@drawable/insta_logo"
                            android:layout_marginLeft="12dp">
                        </ImageView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_margin="10dp"
                            android:layout_toLeftOf="@id/insta_arr"
                            android:layout_toRightOf="@id/instagram_logo"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:text="Instagram"
                                android:textColor="@color/blue"
                                android:textSize="22sp"
                                android:textStyle="bold">
                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:text="Manage your Instagram Profile"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold">
                            </TextView>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/insta_arr"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/ic_arrow"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp">
                        </ImageView>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/shareChat"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp">
                        <ImageView
                            android:id="@+id/sharechat_logo"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="12dp"
                            android:src="@drawable/sharechat"
                            android:layout_marginLeft="12dp">
                        </ImageView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_margin="10dp"
                            android:layout_toLeftOf="@id/ShareChat_Arr"
                            android:layout_toRightOf="@id/sharechat_logo"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:text="ShareChat"
                                android:textColor="@color/blue"
                                android:textSize="22sp"
                                android:textStyle="bold">
                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:text="Download ShareChat Videos"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold">
                            </TextView>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/ShareChat_Arr"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/ic_arrow"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp">
                        </ImageView>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/payment"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp">
                        <ImageView
                            android:id="@+id/razorpay_logo"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="12dp"
                            android:src="@drawable/ic_razorpay"
                            android:layout_marginLeft="12dp">
                        </ImageView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_margin="10dp"
                            android:layout_toLeftOf="@id/razorpay_arr"
                            android:layout_toRightOf="@id/razorpay_logo"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:text="Payment"
                                android:textColor="@color/blue"
                                android:textSize="22sp"
                                android:textStyle="bold">
                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:text="Contribute to the developers"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold">
                            </TextView>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/razorpay_arr"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/ic_arrow"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp">
                        </ImageView>
                    </RelativeLayout>

                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
        </com.google.android.gms.ads.AdView>
    </RelativeLayout>
</layout>